import { VerticalBox, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    title: "Discord Client";
    min-width: 800px;
    min-height: 600px;

    in property <string> current-username: "Connecting...";
    in property <string> current-global-name: "";
    in property <string> visible-name: "Username";
    in property <int> private-channels-count: 0;
    in property <int> guilds-count: 0;

    property <color> primary-color: #5865f2;
    property <color> background-color: #36393f;
    property <color> card-color: #2f3136;
    property <color> text-color: #ffffff;

    background: background-color;

    // Guilds column
    Rectangle {
        width: 80px;
        height: parent.height;
        x: 0;
        y: 0;
        background: card-color;

        Rectangle {
            y: 0;
            x: 10px;
            height: parent.height - 70px;
            width: parent.width - 10px;
        }
    }

    // Private channels column
    Rectangle {
        width: 250px;
        height: parent.height;
        x: 80px;
        y: 0;
        background: card-color;

        Rectangle {
            y: 0;
            x: 0;
            height: parent.height - 70px;
            width: parent.width - 10px;
        
            // Private channel cards here
        }
    }

    // Border between Private channels column and Guilds column
    Rectangle {
        x: 80px;
        width: 2px;
        height: parent.height - 110px;
        y: 20px;
        background: background-color.darker(-0.3);
        border-radius: 10px;
    }
    
    // User profile
    Rectangle {
        width: 310px;
        height: 60px;
        y: parent.height - self.height - 10px;
        x: 10px;
        background: background-color;
        border-radius: 8px;
        Text {
            text: visible-name;
            color: text-color;
            font-size: 16px;
            vertical-alignment: center;
            horizontal-alignment: center;
        }
    }
}
