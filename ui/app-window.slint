import { VerticalBox, HorizontalBox } from "std-widgets.slint";

export component AppWindow inherits Window {
    min-height: 400px;
    min-width: 600px;
    title: "Discord Client";

    in property <string> current-username: "Connecting...";
    in property <string> current-global-name: "";
    in property <int> private-channels-count: 0;
    in property <int> guilds-count: 0;

    property <color> primary-color: #5865f2;
    property <color> background-color: #36393f;
    property <color> card-color: #2f3136;
    property <color> text-color: #ffffff;

    VerticalBox {
        padding: 20px;
        spacing: 15px;

        // User Info Card
        Rectangle {
            background: card-color;
            height: 80px;
            border-radius: 10px;

            HorizontalBox {
                spacing: 15px;
                padding: 15px;

                // Avatar
                Rectangle {
                    width: 50px;
                    height: 50px;
                    background: primary-color;
                    border-radius: 25px;
                }

                VerticalBox {
                    Text {
                        text: current-username;
                        color: text-color;
                        font-size: 18px;
                        font-weight: 700;
                    }

                    Text {
                        text: current-global-name;
                        color: #888;
                        font-size: 14px;
                        visible: current-global-name != "";
                    }
                }
            }
        }

        // Stats Row
        HorizontalBox {
            spacing: 15px;

            Rectangle {
                background: card-color;
                height: 80px;
                border-radius: 10px;
                min-width: 150px;

                VerticalBox {
                    padding: 10px;
                    alignment: center;

                    Text {
                        text: "Private\nChannels";
                        color: #888;
                        font-size: 12px;
                        horizontal-alignment: center;
                    }

                    Text {
                        text: private-channels-count;
                        color: text-color;
                        font-size: 24px;
                        font-weight: 700;
                    }
                }
            }

            Rectangle {
                background: card-color;
                height: 80px;
                border-radius: 10px;
                min-width: 150px;

                VerticalBox {
                    padding: 10px;
                    alignment: center;

                    Text {
                        text: "Guilds\n(Servers)";
                        color: #888;
                        font-size: 12px;
                        horizontal-alignment: center;
                    }

                    Text {
                        text: guilds-count;
                        color: text-color;
                        font-size: 24px;
                        font-weight: 700;
                    }
                }
            }
        }

        // Status Area
        Rectangle {
            background: card-color;
            height: 120px;
            border-radius: 10px;

            VerticalBox {
                padding: 15px;
                spacing: 10px;

                Text {
                    text: "Connection Status";
                    color: #888;
                    font-size: 14px;
                    font-weight: 600;
                }

                HorizontalBox {
                    spacing: 10px;

                    Rectangle {
                        width: 10px;
                        height: 10px;
                        background: #43b581;
                        border-radius: 5px;
                    }

                    Text {
                        text: "Connected to Discord Gateway";
                        color: text-color;
                        font-size: 14px;
                    }
                }

                HorizontalBox {
                    spacing: 10px;

                    Rectangle {
                        width: 10px;
                        height: 10px;
                        background: #43b581;
                        border-radius: 5px;
                    }

                    Text {
                        text: "Heartbeat active";
                        color: text-color;
                        font-size: 14px;
                    }
                }
            }
        }
    }
}
